            <block class="Magento\Framework\View\Element\Template"
                   name="configurabletab" as="configurabletab"
                   template="Unit3_ConfigurableTab::configurabletab.phtml"
                   group="detailed_info">
                <arguments>
                    <argument translate="true" name="title" xsi:type="string">Configurable Tab</argument>
                </arguments>
            </block>
        </referenceBlock>

        <!--
